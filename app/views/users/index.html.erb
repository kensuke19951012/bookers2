  <div class="container">
  <div class="row">
  
    <div class="col-md-3">
      <%= render 'users/user', user: current_user %>
      
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
      <div class="col-md-8 offset-md-1">
        
      <h1>Users</h1>
       <table class="table table-user-show">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
             <td><%= image_tag user.get_profile_image(100,100) %></td>
            </td>
              <td><%= user.name %></td>
               <td><%= link_to "Show", user_path(user.id) %></td>
              
             
              
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>