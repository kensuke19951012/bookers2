<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: book do |f| %> 
  <div> 
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
  	<%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Create Book", class: "btn btn-primary"%>
  </div>
<% end %>